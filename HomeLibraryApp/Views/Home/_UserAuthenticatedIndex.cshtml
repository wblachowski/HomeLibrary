@model HomeLibraryApp.Models.Home
<div>
    <h6>Books per month: @Model.Stats</h6>
    @if (Model.LastBook != null) { 
        <h6>Last book read: @Model.LastBook.Title</h6>
    }
    <h6>Currently being read:</h6>
    <ul>
        @foreach (HomeLibraryApp.Models.Book book in Model.CurrentBooks)
        {
            <li>@book.Title</li>
        }
    </ul>
    <h6>Borrowed books:</h6>
    <ul>
        @foreach(HomeLibraryApp.Models.Book book in Model.BorrowedBooks)
        {
            <li>@book.Title</li>
        }
    </ul>
    <h6>Lent books:</h6>
    <ul>
        @foreach(HomeLibraryApp.Models.Book book in Model.LentBooks)
        {
            <li>@book.Title</li>
        }
    </ul>
</div>

