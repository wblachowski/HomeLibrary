@model IEnumerable<HomeLibraryApp.Models.Book>
<div>
    @if (Model.Count() > 0)
    {
        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author's firstname</th>
                    <th>Author's lastname</th>
                    <th>Publisher</th>
                </tr>
            </thead>
            <tbody>
                @foreach (HomeLibraryApp.Models.Book book in Model)
                {
                    <tr>
                        <td>@book.Title</td>
                        <td>@book.AuthorFirstname</td>
                        <td>@book.AuthorLastname</td>
                        <td>@book.Publisher</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div>
            No results found
        </div>
    }
</div>
