@model HomeLibraryApp.Models.Book
<h4>Add a book</h4>
<input type="hidden" id="library-id" value="@Url.RequestContext.RouteData.Values["id"]" />
<div class="row">
    <div class="col s12">
        <ul class="tabs">
            <li class="tab col s4"><a class="active" href="#new">New book</a></li>
            <li class="tab col s4"><a href="#existing">Existing book</a></li>
            <li class="tab col s4"><a href="#goodreads">Goodreads</a></li>
        </ul>
    </div>
    <div id="new" class="col s12">
        @using (Html.BeginForm("AddNewBook", "Library", new { id = Url.RequestContext.RouteData.Values["id"] }))
        {
            <div class="row">
                <div class="input-field col s12">
                    @Html.TextBoxFor(m => m.Title)
                    @Html.LabelFor(m => m.Title)
                </div>
            </div>
            <div class="row">
                <div class="input-field col l6 s12">
                    @Html.TextBoxFor(m => m.AuthorFirstname)
                    @Html.LabelFor(m => m.AuthorFirstname)
                </div>
                <div class="input-field col l6 s12">
                    @Html.TextBoxFor(m => m.AuthorLastname)
                    @Html.LabelFor(m => m.AuthorLastname)
                </div>
            </div>
            <div class="row">
                <div class="input-field col l6 s12">
                    @Html.TextBoxFor(m => m.PublicationDate, "{0: MMM dd, yyyy}", new { @class = "datepicker" })
                    @Html.LabelFor(m => m.PublicationDate)
                </div>
                <div class="input-field col l6 s12">
                    @Html.TextBoxFor(m => m.Publisher)
                    @Html.LabelFor(m => m.Publisher)
                </div>
            </div>
            <input type="submit" value="Add" class="btn btn-default btn-right" />
        }
    </div>
    <div id="existing" class="col s12">
        <div class="input-field">
            <input id="search-book-input" name="Search" type="text" oninput="searchForBooks()" />
            <label for="Search">Search</label>
        </div>
        <form id="form-search-book" action="#">
            <label for="searchAll">
                <input onclick="searchForBooks()" id="searchAll" name="searchGroup" type="radio" checked />
                <span>All</span>
            </label>
            <label for="searchTitle">
                <input onclick="searchForBooks()" id="searchTitle" name="searchGroup" type="radio" />
                <span>Title</span>
            </label>
            <label for="searchAuthor">
                <input onclick="searchForBooks()" id="searchAuthor" name="searchGroup" type="radio" />
                <span>Author</span>
            </label>
            <label for="searchPublisher">
                <input onclick="searchForBooks()" id="searchPublisher" name="searchGroup" type="radio" />
                <span>Publisher</span>
            </label>
        </form>
        <div id="search-book-container">
            <div class="preloader-wrapper big active">
                <div class="spinner-layer spinner-blue-only">
                    <div class="circle-clipper left">
                        <div class="circle"></div>
                    </div><div class="gap-patch">
                        <div class="circle"></div>
                    </div><div class="circle-clipper right">
                        <div class="circle"></div>
                    </div>
                </div>
            </div>
            <div id="search-book-results"></div>
        </div>
    </div>
    <div id="goodreads" class="col s12">
        <div class="input-field">
            <input id="goodreads-input" name="Goodreads" type="text" oninput="scanGoodreads()" />
            <label for="Goodreads">Goodreads book link</label>
        </div>
        <div class="preloader-wrapper big active">
                <div class="spinner-layer spinner-blue-only">
                    <div class="circle-clipper left">
                        <div class="circle"></div>
                    </div><div class="gap-patch">
                        <div class="circle"></div>
                    </div><div class="circle-clipper right">
                        <div class="circle"></div>
                    </div>
                </div>
            </div>
        <div id="goodreads-error">An error occured while retrieving the book info. Check if you provided a valid Goodreads link.</div>
        <div id="goodreads-result">
            <div class="row">
                <div class="input-field col s12">
                    <input disabled value="" type="text" id="goodreadsTitle">
                    <label for="goodreadsTitle">Title</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <input disabled value="" type="text" id="goodreadsFirstname">
                    <label for="goodreadsFirstname">Author's firstname</label>
                </div>
                <div class="input-field col s6">
                    <input disabled value="" type="text" id="goodreadsLastname">
                    <label for="goodreadsLastname">Author's lastname</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <input disabled value="" type="text" id="goodreadsDate">
                    <label for="goodreadsDate">Publication date</label>
                </div>
                <div class="input-field col s6">
                    <input disabled value="" type="text" id="goodreadsPublisher">
                    <label for="goodreadsPublisher">Publisher</label>
                </div>
            </div>
        </div>
    </div>
</div>
